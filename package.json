{
  "name": "boilerplate_react_native_expo",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "author": "Ã‰verton Toffanetto",
  "description": "This application is a boilerplate for complex and large systems, especially those that need to scale with security and code quality.",
  "repository": "https://github.com/everton-dgn/boilerplate_react_native_expo",
  "main": "src/App.tsx",
  "scripts": {
    "android": "expo run:android",
    "ios": "expo run:ios",
    "build": "eas build",
    "build:local": "eas build --local",
    "lint": "eslint --cache src --ext ts,tsx,json --max-warnings=0",
    "lint:fix": "eslint --cache --fix src --ext ts,tsx,json",
    "format": "prettier --cache --write src",
    "check:format": "prettier --cache --check src",
    "typecheck": "tsc --noEmit",
    "build:check": "cd android && ./gradlew build --warning-mode all && cd ..",
    "expo:doctor": "npx expo-doctor",
    "check:update": "npx upgrade-interactive --latest",
    "update:expo": "npx add expo@latest",
    "update:fix": "npx expo install --fix",
    "prepare": "node scripts/create-husky-files.mjs && husky install"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && npx cz --hook || true",
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@expo-google-fonts/poppins": "^0.2.3",
    "@legendapp/state": "^2.1.4",
    "@react-navigation/bottom-tabs": "^6.5.11",
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/native-stack": "^6.9.17",
    "expo": "^49.0.21",
    "expo-font": "~11.4.0",
    "expo-splash-screen": "~0.20.5",
    "expo-status-bar": "~1.6.0",
    "expo-system-ui": "~2.4.0",
    "react": "18.2.0",
    "react-native": "0.72.6",
    "react-native-mmkv": "^2.11.0",
    "react-native-safe-area-context": "4.6.3",
    "react-native-screens": "~3.22.0",
    "react-native-svg": "13.9.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@commitlint/cli": "^18.2.0",
    "@commitlint/config-conventional": "^18.1.0",
    "@types/node": "^20.8.10",
    "@types/react": "^18.2.33",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "babel-plugin-module-resolver": "^5.0.0",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "^39.1.1",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-import-helpers": "^1.3.1",
    "eslint-plugin-n": "16.2.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-native": "^4.1.0",
    "eslint-plugin-sonarjs": "^0.21.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "react-native-svg-transformer": "^1.2.0",
    "typescript": "^5.3.3"
  }
}
